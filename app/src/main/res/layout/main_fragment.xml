<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_fragment"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <Button
            style="@style/Widget.MaterialComponents.Button"
            android:id="@+id/random_examples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/math_questions_icon"
            android:text="@string/random_examples_title"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            style="@style/Widget.MaterialComponents.Button"
            android:id="@+id/random_expressions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/math_expressions_icon"
            android:text="@string/random_expressions_title"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
        <Button
            style="@style/Widget.MaterialComponents.Button"
            android:id="@+id/solve_problems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/math_problems_icon"
            android:text="@string/solve_problems_title"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</LinearLayout>